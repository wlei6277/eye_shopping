<div class="profile_container">
    <% if user_signed_in? %>
        <% if user.id == current_user.id %>
            <%= link_to image_tag(user.picture), my_board_path %>
        <% else %>
            <%= link_to image_tag(user.picture), user_path(user) %>
        <% end %>
    <% end %>
    <h2><%= user.name %></h2>
</div>