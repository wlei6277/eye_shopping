<% if current_user.user_favourites(current_user: current_user.id, product: product.id) %>
    <%= link_to '', favourite_path(find_favourite(product)) , method: :delete, class: "glyphicon glyphicon-heart" %>
<% else %>
    <%= link_to '', favourites_path(user_id: current_user.id, product_id: product.id), method: :post, class: "glyphicon glyphicon-heart-empty" %>
<% end %>
