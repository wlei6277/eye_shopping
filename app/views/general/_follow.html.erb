<% if user_signed_in? %>
    <% if current_user.user_follows(current_user: current_user.id, displayed_user: displayed_user_id) %>
        <%= link_to 'Unfollow', follower_path(retrieve_follower_record(displayed_user_id: displayed_user_id)) , method: :delete %>
    <% else %>
        <%= link_to 'Follow', followers_path(follower_id: current_user.id, following_id: displayed_user_id), method: :post %>
    <% end %>
<% end %>